<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suppressions PUBLIC "-//Puppy Crawl//DTD Suppressions 1.0//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_2.dtd">
<suppressions>
  <!-- Suppresses checks for all hidden files and directories -->
  <suppress checks=".*" files="[/\\]\..+"/>
  <suppress checks=".*" files=".+\.(?:css|csv|html|json|sh|sql|txt|xml)$"/>
  <suppress checks=".*" files=".+\.(?:jar|tar|war|zip|class|bin)$"/>
  <suppress checks=".*" files=".+\.(?:gif|jpg|jpeg|png)$"/>
  <!-- Suppresses checks for all Maven generated files -->
  <suppress checks=".*" files="[/\\]target[/\\]"/>
  <suppress checks="AbbreviationAsWordInName" files=".*Test.*"/>
  <suppress checks="DesignForExtension" files=".*Test.*"/>
  <suppress checks="EmptyCatchBlock" files=".*Test.*"/>
  <suppress checks="FileLength" files=".*Test.*"/>
  <suppress checks="InnerTypeLast" files=".*Test.*"/>
  <suppress checks="IllegalCatch" files=".*Test.*"/>
  <suppress checks="IllegalImport" files=".*Test.*"/>
  <suppress checks="IllegalThrows" files=".*Test.*"/>
  <suppress checks="MethodCount" files=".*Test.*"/>
  <suppress checks="MethodLength" files=".*Test.*"/>
  <suppress checks="MissingDeprecated" files=".*Test.*"/>
  <suppress checks="NestedTryDepth" files=".*Test.*"/>
  <suppress checks="OneTopLevelClass" files=".*Test.*"/>
  <suppress checks="OuterTypeNumber" files=".*Test.*"/>
  <suppress checks="ParameterNumber" files=".*Test.*"/>
  <suppress checks="RecordComponentNumber" files=".*Test.*"/>
</suppressions>
